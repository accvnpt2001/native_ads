<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingBottom="6dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="clip_horizontal"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headline_small_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="start"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="#181717"
                        android:textSize="12sp"
                        android:textFontWeight="600"
                        tools:text="Headline" />

                    <TextView
                        android:id="@+id/body_small_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:maxLines="2"
                        android:textColor="#363636"
                        android:textSize="10sp"
                        tools:text="body" />

                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_small_ads"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rounded_img"
                        android:backgroundTint="@android:color/white"
                        android:clipToOutline="true"
                        android:scaleType="fitXY"
                        tools:background="#EDEDED" />

                    <TextView
                        android:id="@+id/attribution_small_ads"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:background="#F19938"
                        android:gravity="center"
                        android:text="Ad"
                        android:textColor="#FFFFFF"
                        android:visibility="invisible" />

                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/cta_small_ads"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:gravity="center"
                android:text="Explore"
                android:textSize="16sp"
                android:textColor="@color/gnt_white"
                android:textFontWeight="600"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>




        <TextView
            android:id="@+id/ad_text_small_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="Ad"
            android:background="@drawable/round_text_bottom_right"
            android:textFontWeight="600"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>