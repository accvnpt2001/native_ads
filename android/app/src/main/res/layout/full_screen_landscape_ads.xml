<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/ad_media_full_screen_landscape"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="100dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />


            <TextView
                android:id="@+id/ad_text_landscape_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:text="Ad"
                android:background="@drawable/round_text_bottom_right"
                android:textFontWeight="600"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headline_landscape_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="start"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textFontWeight="600"
                        tools:text="Headline" />

                    <TextView
                        android:id="@+id/body_landscape_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="start"
                        android:maxLines="2"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        tools:text="body" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_landscape_ads"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        tools:background="#EDEDED" />

                    <TextView
                        android:id="@+id/attribution_landscape_ads"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:background="#F19938"
                        android:gravity="center"
                        android:text="Ad"
                        android:textColor="#FFFFFF"
                        android:visibility="invisible" />

                </FrameLayout>

            </LinearLayout>


            <Button
                android:id="@+id/cta_landscape_ads"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="24dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:gravity="center"
                android:text="Explore"
                android:textSize="16sp"
                android:textColor="@color/gnt_white"
                android:textFontWeight="600"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>